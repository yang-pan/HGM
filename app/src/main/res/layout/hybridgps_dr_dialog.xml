<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hybridgps_dr_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:measureWithLargestChild="false"
    android:orientation="vertical" >

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
        android:text="Set DR Value"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/stride_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="48dip"
			android:gravity="center_horizontal"
			android:layout_gravity="center_vertical"/>

		<SeekBar
			android:id="@+id/stride_seekbar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="0.93"
			android:progress="0"
			android:max="200"/>

		<TextView
			android:id="@+id/angle_offset_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="48dip"
			android:gravity="center_horizontal"
			android:layout_gravity="center_vertical"/>

		<SeekBar
			android:id="@+id/angle_offset_seekbar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="0.93"
			android:progress="0"
			android:max="180"/>

		<TextView
			android:id="@+id/dr_plot_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="48dip"
			android:gravity="center_horizontal"
			android:layout_gravity="center_vertical"/>

		<SeekBar
			android:id="@+id/dr_plot_seekbar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="0.93"
			android:progress="0"
			android:max="100"/>


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="48dip"
			android:gravity="center_horizontal"
			android:layout_gravity="center_vertical"
			android:text="Hand Mode"/>

		<RadioGroup android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/mode2_RadioGroup"
			android:orientation="horizontal">
			<RadioButton android:text="Left Hand"
				android:id="@+id/mode2_RadioButton1"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">
			</RadioButton>
			<RadioButton android:text="Right hand"
				android:id="@+id/mode2_RadioButton2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
	        </RadioButton>
		</RadioGroup>

		<Button
		    android:id="@+id/reset_button"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Reset" />

		</LinearLayout>

</LinearLayout>